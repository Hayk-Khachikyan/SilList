@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="col-md-12" style="min-height: 450px;">

    <div class="col-md-2 leftColumn" style="background-color: #101010;">
        @Html.Partial("_Menu")
    </div>

    <div class="col-md-7 mainContent">
        @RenderBody()
    </div>

    <div class="col-md-3" style="background-color: #E8E8EC;">
        blank
    </div>

</div> 

<script>

    $(document).ready(function () {

        var maxHeight = Math.max( $(".leftColumn").height(), $(".mainContent").height());

        $(".leftColumn").css("min-height", maxHeight);
        $(".mainContent").css("min-height", maxHeight);
    });

</script>

</div>