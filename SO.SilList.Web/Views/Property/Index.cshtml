@*@model SO.SilList.Manager.Models.ViewModels.PropertyVm*@
@using SO.SilList.Manager.Models.ValueObjects;
@using SO.Utility.Extensions;
@using SO.SilList.Manager;

@model SO.Utility.Models.ViewModels.SearchFilterVm
@{
    Layout = "~/Views/Shared/_InnerLayout.cshtml";

    var result = Model.result.convertTo<PropertyVo>();
}

@*<h3>@ViewBag.Title</h3>*@

<div style="height:20px;padding:10px;">
    <div class="pull-right">
        <i>
              Showing @((Model.paging.pageNumber - 1) * Model.paging.rowCount + 1)
                      - @((Model.paging.pageNumber - 1) * Model.paging.rowCount + Model.result.Count) 
              of @Model.paging.totalCount
        </i>
    </div>
</div>
<br />
<ul class="media-list">
    @{

        if (result.Count == 0)
        {
            <div class="businessAddressLine"> <b><i>No Match was Found</i></b></div>
        }
        else
        {
            foreach (var item in result)
            {

                <li class="row, media" style="border-bottom: 1px solid #ccc; border-top: 1px solid #ccc;">

                    @Html.Partial("_PropertyItem", item)

                </li>
            }
        }
    }
</ul>
@*@Html.Partial("_List", @filter.result)*@
@Html.Partial("_Pagination", @Model.paging)

